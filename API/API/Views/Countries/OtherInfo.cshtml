@using System.Globalization;
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment hostingEnv

@model CountryBasicVM;

@{
    ViewData["Title"] = $"Driver license and rules in {Model.Country.Name} in {DateTime.Now.ToString("MMMM", CultureInfo.InvariantCulture)} of {DateTime.Now.Year}.";
    ViewData["MetaDescription"] = $"The actual information about driver license and driver rules in {Model.Country.Name} in {DateTime.Now.ToString("MMMM", CultureInfo.InvariantCulture)} of {DateTime.Now.Year}.";
    ViewData["Canonical"] = $"https://glomad.net/{Model.Country.Name}/Auto";
}

@await Html.PartialAsync("_Header", Model.Header)
@await Html.PartialAsync("_Menu", Model.Header.CountryName)

<section class="container sectionstyle">


    <div class="row p-4">
        <div class="row">
            <div class="col-md-8 text-break">     
                @if (this.Context.Request.Path.Value.ToLower().Contains("auto"))
                {
                    @*AUTO *@
                    @if (Model.Country.DriverLicense != null)
                    {
                        <h4><strong>🚗 Do tourists need a license to drive a car in @Model.Country.Name?</strong></h4>
                        <div class="mt-3 p-3">
                            <p>
                                @Html.Raw(Model.Country.DriverLicense)
                            </p>
                        </div>
                    }
                    @if (Model.Country.DriverRules != null)
                    {
                        <h4><strong>🚓 Driver rules in @Model.Country.Name</strong></h4>
                        <div class="mt-3 p-3">
                            <p>
                                @Html.Raw(Model.Country.DriverRules)
                            </p>
                        </div>
                    }
                    @* -- AUTO *@
                } 
                else if (this.Context.Request.Path.Value.ToLower().Contains("season"))
                {
                    @*SEASON *@
                    @if (Model.Country.BestSeason != null)
                    {
                        <h4><strong>🔥 Best time to visit @Model.Country.Name</strong></h4>
                        <div class="mt-3 p-3">
                            <p>
                                @Html.Raw(Model.Country.BestSeason)
                            </p>
                        </div>
                    }
                    @if (Model.Country.PopularPlaces != null)
                    {
                        <h4><strong>💯 The most popular places in @Model.Country.Name</strong></h4>
                        <div class="mt-3 p-3">
                            <p>
                                @Html.Raw(Model.Country.PopularPlaces)
                            </p>
                        </div>
                    }
                    @* -- SEASON *@
                }
                else if (this.Context.Request.Path.Value.ToLower().Contains("guide"))
                {
                    @*GUIDE*@
                    @if (Model.Country.Transport != null)
                    {
                        <h4><strong>🎒 How to travel in @Model.Country.Name</strong></h4>
                        <div class="mt-3 p-3" id="transport">
                            <p>
                                @Html.Raw(Model.Country.Transport)
                            </p>
                        </div>
                    }

                    @if (Model.Country.CurrencyDescription != null)
                    {
                        <h4><strong>💸 Currency in @Model.Country.Name</strong></h4>
                        <div class="mt-3 p-3" id="currencyDescription">
                            <p>
                                @Html.Raw(Model.Country.CurrencyDescription)
                            </p>
                        </div>
                    }

                    @if (Model.Country.Etiquette != null)
                    {
                        <h4><strong>🙏 What are some cultural etiquette and customs in @Model.Country.Name?</strong></h4>
                        <div class="mt-3 p-3" id="etiquette">
                            <p>
                                @Html.Raw(Model.Country.Etiquette)
                            </p>
                        </div>
                    }
                    @* -- GUIDE*@
                }
                else if (this.Context.Request.Path.Value.ToLower().Contains("info"))
                {
                    @*INFO*@
                    @if (Model.Country.Vaccinations != null)
                    {
                        <h4><strong>💉 Are there any specific vaccinations required before traveling to @Model.Country.Name?</strong></h4>
                        <div class="mt-3 p-3" id="vaccinations">
                            <p>
                                @Html.Raw(Model.Country.Vaccinations)
                            </p>
                        </div>
                    }

                    @if (Model.Country.Internet != null)
                    {
                        <h4><strong>🛰 Internet Quality in @Model.Country.Name?</strong></h4>
                        <div class="mt-3 p-3" id="internet">
                            <p>
                                @Html.Raw(Model.Country.Internet)
                            </p>
                        </div>
                    }

                    @if (Model.Country.MobileOperators != null)
                    {
                        <h4><strong>📶 Mobile operators in @Model.Country.Name</strong></h4>
                        <div class="mt-3 p-3" id="mobileOperators">
                            <p>
                                @Html.Raw(Model.Country.MobileOperators)
                            </p>
                        </div>
                    }

                    @if (Model.Country.EmrgencyNumbers != null)
                    {
                        <h4><strong>📲 Emergency numbers in @Model.Country.Name</strong></h4>
                        <div class="mt-3 p-3" id="emrgencyNumbers">
                            <p>
                                @Html.Raw(Model.Country.EmrgencyNumbers)
                            </p>
                        </div>
                    }
                    @* -- INFO*@
                }
                else if (this.Context.Request.Path.Value.ToLower().Contains("safety"))
                {
                    @*SAFETY*@
                    @if (Model.Country.Safety != null)
                    {
                        <h4><strong>👮‍♂️ Safety for tourists in @Model.Country.Name</strong></h4>
                        <div class="mt-3 p-3" id="safety">
                            <p>
                                @Html.Raw(Model.Country.Safety)
                            </p>
                        </div>
                    }
                    @* -- SAFETY*@
                }
            </div>

            <div class="col-md-4 p-4">

                <div class="position-sticky" style="top: 2rem;">

                    @await Html.PartialAsync("_SubscribeUpdates")

                    <div class="bg-light rounded-booking mb-3 mt-1">
                        <a href="https://safetywing.com?referenceID=24744359&utm_source=24744359&utm_medium=Ambassador" rel="noopener nofollow noreferrer">
                            <div class="card bg-dark text-white border-0 card-cover" style="background-image: url('../safetywind_300.jpg');">
                                <div class="card-img-overlay text-center">
                                    <h3 class="card-title shadowed mt-5 lh-1 fw-bold">Global travel medical insurance</h3>
                                    <p class="m-1 badge rounded-pill bg-info text-dark">for $1.5/day!</p>
                                    <p class="m-1 badge rounded-pill bg-warning text-dark">Covid-19 coverage</p>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="bg-light rounded-booking">
                        <div>
                            <script src="//tp.media/content?currency=usd&promo_id=4044&shmarker=14510&campaign_id=100&trs=21653&target_host=search.jetradar.com&locale=en_us&limit=6&powered_by=false&destination=@Model.Country.CapitalCode" charset="utf-8"></script>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</section>